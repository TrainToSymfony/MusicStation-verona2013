{% extends 'MusicStationSiteBundle::layout.html.twig' %}

{% block container %}

    <div class="span12">
        <form action="{{ path('user_event_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal" novalidate>

            <fieldset>
                <legend>Event edit</legend>

                <div class="control-group {{ (form_errors(edit_form.location)) ? 'error':'' }}">
                    {{ form_label(edit_form.location, null, {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(edit_form.location) }}
                        {% if form_errors(edit_form.location) %}
                            <span class="help-inline">{{ form_errors(edit_form.location) }}</span>
                        {% endif %}
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(edit_form.startDate, null, {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        <div id="datetimepicker-{{ edit_form.startDate.vars.id }}" class="input-append date">
                            {{ form_widget(edit_form.startDate, {'attr': {'data-format': 'yyyy/MM/dd hh:mm:ss'}}) }}
                            <span class="add-on">
                                <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="{{ path('user_event') }}" class="btn">
                        Back to the list
                    </a>
                </div>
            </fieldset>

            {{ form_rest(edit_form) }}
        </form>
    </div>

    <script type="text/javascript">
        $(function() {
            $('#datetimepicker-{{ edit_form.startDate.vars.id }}').datetimepicker({
                language: 'it-IT'
            });
        });
    </script>

{% endblock %}
