{% extends 'MusicStationSiteBundle::layout.html.twig' %}

{% block container %}

    <div class="span12">
        <form action="{{ path('user_shout_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal" novalidate>

            <fieldset>
                <legend>Shout edit</legend>

                <div class="control-group {{ (form_errors(edit_form.message)) ? 'error':'' }}">
                    {{ form_label(edit_form.message, null, {'label_attr': {'class': 'control-label'}}) }}
                    <div class="controls">
                        {{ form_widget(edit_form.message) }}
                        {% if form_errors(edit_form.message) %}
                            <span class="help-inline">{{ form_errors(edit_form.message) }}</span>
                        {% endif %}
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="{{ path('user_shout') }}" class="btn">
                        Back to the list
                    </a>
                </div>
            </fieldset>

            {{ form_rest(edit_form) }}
        </form>
    </div>

{% endblock %}
